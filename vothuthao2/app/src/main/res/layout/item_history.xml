<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Thông tin sách -->
        <TextView
            android:id="@+id/tv_book_title_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sách"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_book_author_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tác giả: ..."
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Đường phân cách -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp" />

        <!-- Thông tin mượn trả -->
        <TextView
            android:id="@+id/tv_borrow_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày mượn: ..."
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày phải trả: ..."
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:drawableStart="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_return_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày trả: ..."
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:drawableStart="@android:drawable/ic_menu_agenda"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_extension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã gia hạn: ... ngày"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:drawableStart="@android:drawable/ic_menu_add"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_status_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái: ..."
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawableStart="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp" />

        <!-- Layout cho các nút (chỉ hiện khi đang mượn) -->
        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_return_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Trả sách"
                android:textSize="14sp"
                android:backgroundTint="@android:color/holo_blue_dark" />

            <Button
                android:id="@+id/btn_extend_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Gia hạn"
                android:textSize="14sp"
                android:backgroundTint="@android:color/holo_orange_dark" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>